$theatre_red: #811f1e;
$creme: #FCF7EF;
$border_color : #000;
@mixin radial-gradient($r1,$g1,$b1,$r2,$g2,$b2) {
  background-image: -webkit-gradient(radial, 50% 100%,100,50% -50%,100, to(rgb($r1, $g1, $b1)), from(rgb($r2, $g2, $b2)));
  background-image: -webkit-radial-gradient(50% 0%, rgb($r1, $g1, $b1), rgb($r2, $g2, $b2));
  background-image: -moz-radial-gradient(50% 0%, rgb($r1, $g1, $b1), rgb($r2, $g2, $b2));
  background-image: -o-radial-gradient(50% 0%, rgb($r1, $g1, $b1), rgb($r2, $g2, $b2));
  background-image: -ms-radial-gradient(50% 0%, rgb($r1, $g1, $b1), rgb($r2, $g2, $b2));
  background-image: radial-gradient(50% 0%, rgb($r1, $g1, $b1), rgb($r2, $g2, $b2));
}
@mixin linear-gradient($r1,$g1,$b1,$r2,$g2,$b2) {
  background-image: -webkit-gradient(linear, left top, left bottom, to(rgb($r1, $g1, $b1)), from(rgb($r2, $g2, $b2)));
  background-image: -webkit-linear-gradient(top, rgb($r1, $g1, $b1), rgb($r2, $g2, $b2));
  background-image: -moz-linear-gradient(top, rgb($r1, $g1, $b1), rgb($r2, $g2, $b2));
  background-image: -o-linear-gradient(top, rgb($r1, $g1, $b1), rgb($r2, $g2, $b2));
  background-image: -ms-linear-gradient(top, rgb($r1, $g1, $b1), rgb($r2, $g2, $b2));
  background-image: linear-gradient(top, rgb($r1, $g1, $b1), rgb($r2, $g2, $b2));
}
@mixin light-box-shadow($rad,$pct){
-moz-box-shadow: 0 0 $rad lighten($theatre_red, $pct);
-webkit-box-shadow: 0 0 $rad lighten($theatre_red, $pct);
box-shadow: 0 0 $rad lighten($theatre_red, $pct);
}
@mixin box-shadow($rad,$color){
-moz-box-shadow: 0 0 $rad $color;
-webkit-box-shadow: 0 0 $rad $color;
box-shadow: 0 0 $rad $color;
}
@mixin border-radius($px) {
  -webkit-border-radius: $px;
  -moz-border-radius: $px;
  border-radius: $px;
}
@mixin padding-margin($padding, $margin) {
  padding: $padding;
  margin: $margin;
}

body {
  background:$theatre_red url('<%= image_path('background-scales.gif') %>');
  color: $creme;
  font-family: verdana, arial, helvetica, sans-serif;
  font-size: 18px;
  line-height: 24px;
  text-shadow: 0px 1px 3px darken($theatre_red, 50%);
  }
  
ul {
  list-style-type: none;
  margin-left: -25px;
}

a {
  color: #FC0;
  &:visited {
    color: #FC0; }
  &:hover {
    color: yellow;
    } }

#header {
  position: relative;
  left: 15px; top: 5px;
  }
h1 {
  display: inline;
  font: {
    family: museo-slab, verdana, sans-serif;
    weight: 900;
    style: italic;
  }
  letter-spacing: -1px;
  }
h1#winner-title {font-style: normal;}
h2 {
  font: {
    family: museo-slab, verdana, sans-serif;
    weight: 700;
    size: 0.9em;
  }
  display: inline;
  padding-left: 25px;
}

.winner-description p {padding-left: 20px; line-height: 1.4em; font-weight: bold;}
#winner-title {font-size: 1.4em; font-weight: bold;}
#winner > .info-area {
  background-color: darken($theatre_red, 15%);
  @include radial-gradient(142, 26, 26, 70, 9, 10);
  @include border-radius(5px);
  @include box-shadow(15px, #000);
  @include padding-margin(10px, 20px);
  width: 500px;  
  height: 350px;
  }
#winner > .info-area > .description p {font-size:1.25em; line-height: 1.5em;}
#winner #winner-poster img {
  @include light-box-shadow(20px,30%);
  @include border-radius(3px);
  border: 5px solid $border_color;
  width: 180px;
  margin: 5px 15px 5px 0px;
  float: left;
  }
#winner #winner-poster img:hover {
  @include light-box-shadow(20px,50%);
  }
  
.imdb {position:relative; top:4px; padding-right: 4px;}
#winner .imdb {top:3px;}
.score {
  font-size: 0.8em;
  color: darken($creme, 5%);
  padding: 5px;
  background-color: #a51c1a;
  @include linear-gradient(165, 28, 26, 72, 20, 21);
  filter: progid:DXImageTransform.Microsoft.gradient(startColorStr='#a51c1a', EndColorStr='#481415');
  @include box-shadow(2px, #000);
  @include border-radius(5px);
  text-shadow: 0px 0px 5px #000;
  }

#runners-up {
  font-size: 0.7em;
  line-height: 18px;
  }
#runners-up h1 {font-weight: 700; font-style: normal; font-size: 1.9em;}
#runners-up > .info-area {
  @include radial-gradient(142, 26, 26, 13, 15, 17);
  @include border-radius(5px);
  @include box-shadow(6px, #000);
  width: 400px;
  height: 170px;
  background-color: darken($theatre_red, 20%);
  @include padding-margin(10px, 20px);
  }
#runners-up #runners-up-poster img {
  @include border-radius(3px);
  @include box-shadow(10px, lighten($theatre_red, 30%));
  border: 5px solid $border_color;
  float: right;
  margin-left: 5px;
  width: 100px;
  }
#runners-up #runners-up-poster img:hover {
  @include box-shadow(10px, lighten($theatre_red, 50%));
  }
  
#footer {
  display: block;
  font: {
    family: museo-slab, verdana, sans-serif;
    weight: 700;
    size: 0.7em;
  };
  position: relative;
  left: 15px; top: 5px;
  margin-bottom: 50px;
  }